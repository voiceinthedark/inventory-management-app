<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="/authors/authors.scss">
</head>
<body>
<header class="header">
    <h1>Book management application</h1>
    <nav class="navigation">
        <a href="/">Home</a> |
        <a href="/books">Books</a> |
        <a href="/books/add">Add books</a> |
        <a href="/genres">Genres</a> |
        <a href="/genres/add">Add genres</a> |
        <a href="/authors">Authors</a> |
        <a href="/authors/add">Add authors</a> |
        <a href="/about">About</a>
    </nav>
    <hr>
</header>
<main class="container">
    <h2>Authors list</h2>
    <section class="content">
    <ul class="author-list">
        <% authors.forEach(function(author) { %>
        <div>
        <a href="/authors/<%= author.id %>/details">
            <li class="author-item">
              <strong><span class="author-name"><%= author.name %></span></strong>
            </li>
        </a>
        <form class="author-delete-form" action="/authors/<%= author.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this author?');">
            <button type="submit" class="delete-button">X</button>
        </form>
        </div>
        <% }); %>
    </ul>
    </section>
    </main>
</html>
