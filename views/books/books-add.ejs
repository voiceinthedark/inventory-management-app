<html>
<head>
    <title>Add New Book</title>
    <link rel="stylesheet" type="text/css" href="/books/add.scss">
</head>
<body>
<header class="header">
    <h1>Book management application</h1>
    <nav class="navigation">
        <a href="/">Home</a> |
        <a href="/books">Books</a> |
        <a href="/books/add">Add books</a> |
        <a href="/genres">Genres</a> |
        <a href="/genres/add">Add genres</a> |
        <a href="/authors">Authors</a> |
        <a href="/authors/add">Add authors</a> |
        <a href="/about">About</a>
    </nav>
    <hr>
</header>
   <main class="container"> 
        <h1>Add a New Book</h1>
        <form class="add-book-form" action="/books/add" method="POST">
            <label for="title">Title:</label><br>
            <input type="text" id="title" name="title" required><br><br>
            <label for="author">Author:</label><br>
            <select id="author" name="author" required>
                <% authors.forEach(function(author) { %>
                    <option value="<%= author.id %>"><%= author.name %></option>
                <% }); %>
            </select><br><br>
            <label for="genre">Genre:</label><br>
           <select id="genre" name="genre" required>
                <% genres.forEach(function(genre) { %>
                    <option value="<%= genre.id %>"><%= genre.name %></option>
                <% }); %>
            </select><br><br> 
            <label for="year">Publication Year:</label><br>
            <input type="number" id="published_date" name="published_date" required><br><br>
            <textarea id="summary" name="summary" rows="4" cols="50" placeholder="Book Summary"></textarea><br><br>
            <input type="submit" value="Add Book">
        </form>
    </main>
</body>
</html>
