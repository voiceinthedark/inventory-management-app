<html>
<head>
    <title><%= genre %></title>
    <link rel="stylesheet" type="text/css" href="/genres/genre-books.scss">
</head>
<body>
<header class="header">
    <h1>Book management application</h1>
    <nav class="navigation">
        <a href="/">Home</a> |
        <a href="/books">Books</a> |
        <a href="/books/add">Add books</a> |
        <a href="/genres">Genres</a> |
        <a href="/genres/add">Add genres</a> |
        <a href="/authors">Authors</a> |
        <a href="/authors/add">Add authors</a> |
        <a href="/about">About</a>
    </nav>
    <hr>
</header>
<main class="container">
    <h1><%= genre %></h1>
    <ul class="book-list">
        <% books.forEach(function(book) { %>
        <a href="/books/<%= book.id %>/details">
            <li class="book-item">
              <strong><span class="book-title"><%= book.title %></span></strong>
              by <span class="book-author"><%= book.author_name %></span> (Genre: <%= book.genre_name %>)
            </li>
        </a>
        <% }); %>
    </ul>
    </main>
</body>
</html>
