{
  "name": "inventory-management",
  "version": "0.04.37",
  "description": "A simple inventory management system using Express and PostgreSQL",
  "main": "app.js",
  "scripts": {
    "dev:start": "NODE_ENV=development nodemon app.js",
    "start": "NODE_ENV=production node app.js",
    "db:setup": "NODE_ENV=production node ./db/setupdb.js",
    "db:populate": "NODE_ENV=production node ./db/populatedb.js",
    "db:reset": "npm run db:setup && npm run db:populate"
  },
  "keywords": [
    "inventory",
    "management",
    "express",
    "nodejs",
    "postgresql"
  ],
  "author": "Firas Abbas",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
